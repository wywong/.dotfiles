[core]
  editor = vim -u "~/.vimrc"
[user]
  name = Wilson Y. Wong
  email = Wilson.Young.Wong@gmail.com
[alias]
  br = branch
  co = checkout
  fa = fetch --all
  lg = log --graph --decorate --all
  st = status -s
  pdr = push --dry-run
  undo-commit = reset --soft HEAD~1
  unstage = reset HEAD
[merge]
  tool = vimdiff
[color]
  ui = true
[include]
  path = ~/.gitconfig.local
[init]
  templatedir = ~/.git_templates
